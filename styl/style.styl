@import 'nib'
global-reset()
reset-html5()

/* Variables */
yellow = #ffeb01
bgcolor = #fff
textcolor = #555

* { -moz-box-sizing: border-box; -webkit-box-sizing: border-box; box-sizing: border-box; }

html
  background bgcolor

body
  background bgcolor
  width 100%
  height 100%
  color textcolor
  margin 0 auto
  font 1em/1.3125em Helvetica, Arial, sans-serif

#container
  margin 10px auto
  text-align center

canvas
  background #000
  margin 0 auto
  border 2px solid #444
  box-shadow 0 0 5px #000

a:link, a:active, a:visited
  color yellow
  text-decoration none
a:hover
  text-decoration underline

h1, h2, h3, h4, h5, h6
  font-family sans-serif
  font-weight 400
  color #d2d2d2
  line-height 1.3125em

h1, .h1
  font-weight bold
  font-size 1.5em
  color #900
  margin 0.15em 0
h2, .h2
  font-size 2.625em
  margin 1em 0
h3, .h3
  font-size 1.625em
  color #afb092
  margin 1.385em 0
